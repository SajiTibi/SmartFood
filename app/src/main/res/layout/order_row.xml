<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/holder_drawable">

    <TextView
        android:id="@+id/order_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"/>

    <TextView
        android:id="@+id/order_purchase_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/order_creator"
        android:text="TextView"/>

    <Button
        android:id="@+id/finish_order"
        android:visibility="gone"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="39dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/dialog_button_unclicked_drawable"
        android:text="Finish"
        android:textAlignment="center" />

    <Button
        android:id="@+id/done_order"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="39dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:textAlignment="textEnd"
        android:text="Done"/>

    <Button
        android:id="@+id/reject_order"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/button_unclicked_drawable"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:layout_marginRight="10dp"
        android:text="Reject"/>

    <Button
        android:id="@+id/accept_order"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/button_unclicked_drawable"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:layout_toStartOf="@+id/reject_order"
        android:layout_marginRight="20dp"
        android:text="Accept"/>



</RelativeLayout>