<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/holder_drawable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/mcr_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Recipe name: "/>

    <TextView
        android:id="@+id/mcr_recipe_brought_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mcr_recipe_name"
        android:text="Cooker: "/>

    <TextView
        android:id="@+id/mcr_recipe_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="STATUS"/>

    <TextView
        android:id="@+id/mcr_recipe_brought_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mcr_recipe_brought_from"
        android:text="Timestamp"/>

    <TextView
        android:id="@+id/mcr_recipe_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mcr_recipe_brought_time"
        android:text="Location"/>

</RelativeLayout>