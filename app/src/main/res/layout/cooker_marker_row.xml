<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/holder_drawable">


    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Name"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recipe_cooker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_name"
        android:text="Made By:"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_price"
        android:singleLine="false"
        android:text="Recipe description" />

    <TextView
        android:id="@+id/recipe_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_cooker"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/recipe_picture"
        android:textStyle="bold"
        android:text="Price" />

    <Button
        android:id="@+id/recipe_order_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_unclicked_drawable"
        android:text="Order"
        android:textAlignment="center"
        android:textSize="15sp" />

</RelativeLayout>