<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="UID: "/>

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Email address: "/>

    <TextView
        android:id="@+id/user_type"
        android:hint="User Type"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/suggested_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Suggested location:" />

    <Button
        android:id="@+id/change_to_this_location_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_unclicked_drawable"
        android:text="Change to this location" />

    <EditText
        android:id="@+id/user_entered_loaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Or enter your location"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/update_location"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/button_unclicked_drawable"
        android:text="Update location" />

    <Button
        android:id="@+id/logout_button"
        android:layout_marginTop="25dp"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:background="@drawable/button_unclicked_drawable"
        android:text="Logout" />

</LinearLayout>